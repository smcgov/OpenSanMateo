/**
 * Implements hook_form_alter().
 *
 * Adds Event type options filter, and Start and End date fields to the Calendar
 * exposed filter form.
 *
 * Also disables the Quick Search tags field if the permission isn't set.
 */
function opensanmateo_search_form_alter(&$form, &$form_state, $form_id) {
  if ($form_id == 'views_exposed_form' && $form['#id'] =='views-exposed-form-opensanmateo-search-page-1') {
    // Subject, Start and end date filters.
    $parameters = drupal_get_query_parameters();
    if (isset($parameters['subject'])) {
      $form['subject']['#default_value'] = $parameters['subject'];
    }


    // If no start date is provided, default to today (show only future events).
    $start_day = isset($parameters['start_date']['date']) ? $parameters['start_date']['date'] : date('Y-m-d');
    // If there is no default end date, defer to the last day of the month.
    // PHP's t date token is the number of days in that month.
    $end_day = isset($parameters['end_date']['date']) ? $parameters['end_date']['date'] : date('Y-m-t', strtotime($start_day));

    $form['start_date']['#type'] = 'date_popup';
    $form['start_date']['#size'] = '16';
    $form['start_date']['#title'] = t('From');
    $form['start_date']['#date_format'] = 'Y-m-d';
    $form['start_date']['#default_value'] = $start_day;

    $form['to_date']['#type'] = 'date_popup';
    $form['to_date']['#size'] = '16';
    $form['to_date']['#title'] = t('To');
    $form['to_date']['#date_format'] = 'Y-m-d';
    $form['to_date']['#default_value'] = $end_day;
    // This function converts the date popup format to the timestamp value that
    // the Views filter expects.
    $form['#validate'][] = 'opensanmateo_search_timestamp_convert';
    // Add a label for the Department filter.
    if (isset($form['search_api_site_hash'])) {
      $form['search_api_site_hash']['#title'] = 'Dept';
    }
    // Make sure there is an Event term for the Subject taxonomy.
    if ($term = variable_get('opensanmateo_event_vocab_term')) {
      // Use the first match found (there could theoretically be multiple).
      $term = reset(taxonomy_get_term_by_name($term, 'subject'));
      $terms = taxonomy_get_children($term->tid);
      $type_options = array('' => t('- Any -'));
      foreach ($terms as $data) {
        $type_options[$data->name] = $data->name;
      }
      $form['subject']['#type'] = 'select';
      unset($form['subject']['#size']);
      $form['subject']['#title'] = t('Type');
      $form['subject']['#options'] = $type_options;
      $form['subject']['#multiple'] = FALSE;
    }
    else {
      // If no Event subject term has been set, hide the filter.
      unset($form['subject']);
    }
  }

  if (!isset($form['field_quick_search'])) {
    return;
  }

  if (!user_access('edit quick search tags')) {
    $form['field_quick_search']['#disabled'] = TRUE;
  }
}

/**
 * Validation function to transform date_popup values into timestamps.
 */
function opensanmateo_search_timestamp_convert($form, &$form_state) {
  if (isset($form_state['values']['start_date'])) {
    $form_state['values']['start_date'] = strtotime($form_state['values']['start_date']);
  }
  if (isset($form_state['values']['to_date'])) {
    $form_state['values']['to_date'] = strtotime($form_state['values']['to_date']);
  }
}

/**
* Plugin that filters taxonomy terms to be just the children of a particular term
*/
class FacetapiFilterChildTerms extends FacetapiFilter {

  /**
   * Filters facet items.
   */
  public function execute(array $build) {
    $tid = $this->settings->settings['parent_term'];
    $pterm = taxonomy_term_load($tid);
    $tree = taxonomy_get_tree($pterm->vid, $pterm->tid);
    foreach($tree as $term) {
      $terms[] = $term->name;
    }
    foreach($build as $key => $item) {
      if(!in_array($key, $terms)) {
        unset($build[$key]);
      }
    }
    return $build;
  }
  public function settingsForm(&$form, &$form_state) {
    $vocs = taxonomy_get_vocabularies();
    foreach($vocs as $id => $voc) {
      $tree = taxonomy_get_tree($id);
      $terms = array();
      $current = array();
      foreach($tree as $i => $term) {
        $terms[$term->tid]['name'] = $term->name;
        if($term->depth) {
          $terms[$term->parents[0]]['count'] = isset($terms[$term->parents[0]]['count']) ? $terms[$term->parents[0]]['count'] + 1  : 1;
        }
      }
      foreach($terms as $id => $term) {
        if (isset($term['count'])) {
          $terms[$id] = $term['name'] . " (" . $term['count'] . ")";
        }
        else {
          unset($terms[$id]);
        }
      }
      $options[$voc->name]= $terms;

    }
    $form['parent_term'] = array(
      '#type' => 'select',
      '#options' => $options,
      '#title' => 'Parent Term'
    );
  }

}

